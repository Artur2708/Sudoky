        <Button x:Name="btn_close" Content="Выход" Canvas.Left="93" Margin="0" Canvas.Top="265" Width="173"  Foreground="#FF05E8DE" Click="btn_close_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.485"/>
                    <GradientStop Color="#FF360B0B" Offset="0.004"/>
                    <GradientStop Color="#FF340A0A" Offset="0.862"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Canvas>
</Window>
