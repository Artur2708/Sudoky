            </Button.Background>
        </Button>
        <ComboBox x:Name="comboBox"  Canvas.Left="211" Canvas.Top="165" Width="138" Height="48" SelectionChanged="comboBox_SelectionChanged" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center" VerticalContentAlignment="Center" RenderTransformOrigin="0.509,0.451" FontSize="16" FontFamily="Yu Gothic UI Semibold">
