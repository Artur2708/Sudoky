<UserControl x:Class="Exam.SudokuSquare"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Exam"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="Border1" BorderBrush="BlueViolet" BorderThickness="2" Height="60" Width="60">
        <Grid x:Name="Grid1">
            <TextBox x:Name="tbxValue"  BorderThickness="0" FontSize="30" Background="Transparent"  FontWeight="Bold" HorizontalContentAlignment="Center" TextChanged="tbxValue_TextChanged" PreviewMouseDown="tbxValue_PreviewMouseDown" Margin="0,4,-0.2,-0.2" MinWidth="50" MinHeight="50" RenderTransformOrigin="0.319,0.404"/>
            <TextBlock x:Name="tbNotes" TextWrapping="Wrap" FontWeight="Bold" HorizontalAlignment="Left" FontSize="8" Height="Auto" Width="52" Margin="3,0,0,44" Foreground="Gray"/>
        </Grid>
    </Border>
</UserControl>
